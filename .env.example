# Required
REDIS_URL=redis://:password@127.0.0.1:6379/0
MCP_BEARER_TOKENS=replace-with-a-long-random-token

# Database (new)
DATABASE_URL=postgresql://user:password@127.0.0.1:5432/mcp_time?sslmode=disable
AUTH_MODE=db

# Auth & quota (new)
DEFAULT_FREE_DAILY_REQUEST_LIMIT=200
POLICY_CACHE_SECONDS=60
AUTH_SESSION_COOKIE_NAME=sid
AUTH_SESSION_TTL_SECONDS=604800
AUTH_COOKIE_SECURE=1

# Request logs (new)
REQUEST_LOG_RETENTION_DAYS=7
REQUEST_LOG_FLUSH_EVERY_MS=1000
REQUEST_LOG_MAX_BUFFER=200

# App
PORT=7545
HOST=0.0.0.0
TRUST_PROXY_HOPS=1

# Limits
MCP_BODY_LIMIT=512kb
RATE_LIMIT_PER_IP_PER_MINUTE=120
SSE_MAX_CONNS_PER_IP=5

# Admin dashboard (optional)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me
ADMIN_COOKIE_SECRET=replace-with-a-long-random-secret
ADMIN_COOKIE_SECURE=1
ADMIN_SESSION_TTL_SECONDS=604800
